{
  // 不要开启这个配置，这个配置是用来读取eslint.config.js配置文件的
  // 这个配置文件的层级更平滑，注意跟.eslintrc.js的区别，配置项有些差别
  "eslint.experimental.useFlatConfig": false,
  // 只有发现问题的时候处理
  "eslint.codeActionsOnSave.mode": "problems",
  // 作为格式化的工具
  "eslint.format.enable": true,
  // 开启eslint
  "eslint.enable": true,
  "eslint.lintTask.enable": true,
  // 校验文件
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown",
    "astro"
  ]
}
